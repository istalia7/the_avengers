{% extends 'base.html.twig' %} {% block title %}Inscription {% endblock %} {%
block body %}
<h2 class="strokeTexte text-center font-semibold text-5xl text-[#D1D1D1]">
  S'inscrire
</h2>
<div class="min-h-screen flex items-center justify-center">
  <div class="flex flex-col items-center bg-[#D1D1D126] p-4 rounded-lg">
    {{ form_start(registrationForm, { attr: { novalidate: "novalidate" } }) }}
    <div class="flex flex-col items-center mb-4">
      {{ form_label(registrationForm.email, "Adresse Mail") }}
      {{
        form_widget(registrationForm.email, {
          attr: {
            class: "text-[#040606] w-48 mt-1 mb-2 rounded-sm"
          }
        })
      }}
      {% if form_errors(registrationForm.email) %}
      <span class="bg-red-500 rounded-lg inline-block text-center my-1 p-1">
        {{ form_errors(registrationForm.email) }}
      </span>
      {% endif %}
    </div>

    <div class="flex flex-col items-center mb-4">
      {{
        form_label(registrationForm.plainPassword, "Mot de passe", {
          attr: { class: "flex-start" }
        })
      }}
      {{
        form_widget(registrationForm.plainPassword, {
          attr: {
            class: "text-[#040606] w-48 mt-1 mb-2 rounded-sm"
          }
        })
      }}
      {% if form_errors(registrationForm.plainPassword) %}
      <span class="bg-red-500 inline-block rounded-lg text-center my-1 p-1">
        {{ form_errors(registrationForm.plainPassword) }}
      </span>
      {% endif %}
    </div>
    <div class="flex flex-col items-center mb-2">
      {{
        form_label(
          registrationForm.agreeTerms,
          "J'ai pris connaisances des conditions d'utilisations"
        )
      }}
      {{
        form_widget(registrationForm.agreeTerms, {
          attr: { class: "mt-1 mb-2" }
        })
      }}
      {% if form_errors(registrationForm.agreeTerms) %}
      <span
        class="bg-red-500 inline-block rounded-lg text-center mt-1 mb-3 p-1"
      >
        {{ form_errors(registrationForm.agreeTerms) }}
      </span>
      {% endif %}
    </div>
    <div class="flex justify-center">
      <button type="submit" class="Btn">
        {% include "partials/button.html.twig" %} Register
      </button>
    </div>
    {{ form_end(registrationForm) }}
  </div>
</div>
{% endblock %}
